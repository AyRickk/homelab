# Terraform Credentials Template
# Copy this file to credentials.tfvars and fill in your values
# DO NOT commit credentials.tfvars to version control!

# Proxmox API Configuration
PROXMOX_API_URL = "https://YOUR_PROXMOX_IP:8006/api2/json"
PROXMOX_ROOT_USER = "root@pam"  # Or your Proxmox user
PROXMOX_ROOT_PASSWORD = "YOUR_PROXMOX_PASSWORD"

# SSH Public Key for VMs (same as used in Packer)
PUBLIC_SSH_KEY = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-key-here user@hostname"

# Cloud-init user password (hashed)
# Generate with: python3 -c 'import crypt; print(crypt.crypt("yourpassword", crypt.mksalt(crypt.METHOD_SHA512)))'
# Or: mkpasswd -m sha-512
CI_ODIN_PASSWORD = "$6$rounds=4096$SALT$HASH..."
