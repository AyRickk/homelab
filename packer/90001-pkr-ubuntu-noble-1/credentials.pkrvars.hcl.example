# Packer Credentials Template
# Copy this file to credentials.pkrvars.hcl and fill in your values
# DO NOT commit credentials.pkrvars.hcl to version control!

# Proxmox API Configuration
proxmox_api_url = "https://YOUR_PROXMOX_IP:8006/api2/json"
proxmox_api_token_id = "YOUR_TOKEN_ID@pve!YOUR_TOKEN_NAME"
proxmox_api_token_secret = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# SSH Configuration for template
ssh_username = "odin"  # Change if you want a different username
ssh_password = "TEMPORARY_BUILD_PASSWORD"  # Only used during Packer build

# SSH Public Key (will be the only way to access VMs after build)
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-key-here user@hostname"
